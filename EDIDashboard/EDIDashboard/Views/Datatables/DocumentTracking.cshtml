                        @* Load datatable js *@
                        @section Scripts{

                            <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
                            <script src="//cdn.datatables.net/plug-ins/1.10.13/sorting/datetime-moment.js"></script>
                            <script src="//cdn.datatables.net/plug-ins/1.10.13/sorting/date-dd-MMM-yyyy.js"></script>
                        <script src="//cdn.datatables.net/plug-ins/1.10.13/dataRender/datetime.js"></script>

                                                                            @*<script src ="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js"></script>
        
                                                        <script src="//cdn.datatables.net/plug-ins/1.10.13/sorting/date-uk.js"></script>
                                                                            *@
                            



                            <script>
                                var editor;
                                $(document).ready(function () {
                                    
                                    $('#myTable').DataTable({
                                        "stateSave": true,
                                        "scrollY": '70vh',
                                        "processing": true, // for show processing bar
                                        "serverSide": true, // for process on server side
                                        "deferLoading": 0,
                                        "scrollX": true,
                                        "responsive": true,
                                        "orderMulti": false, // for disable multi column order
                                        "dom": '<"top"i>rt<"bottom"lp><"clear">', // for hide default global search box
                                        "ajax": {
                                            "url": "/Datatables/DocumentTrackingTable",
                                            "type": "POST",
                                            "datatype": "json"
                                        },
                                        "columns": [
                                                {
                                                    "data": "CreateDate", "name": "CreateDate", "autoWidth": true,
                                                    "type": "date", "render": function (value) {
                                                        if (value === null) return "";

                                                        var pattern = /Date\(([^)]+)\)/;
                                                        var results = pattern.exec(value);
                                                        var dt = new Date(parseFloat(results[1]));

                                                        return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear() +
                                                            " " + dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                                                    }
                                                        
                                                },
                                                { "data": "UniqueID", "name": "UniqueID", "autoWidth": true },
                                                { "data": "BPID", "name": "BPID", "autoWidth": true },
                                                { "data": "TPName", "name": "TPName", "autoWidth": true },
                                                { "data": "TransactionSetID", "name": "TransactionSetID", "autoWidth": true },
                                                { "data": "Direction", "name": "Direction", "autoWidth": true },
                                                { "data": "OriginalFileName", "name": "OriginalFileName", "autoWidth": true },
                                                { "data": "ProcessingStatus", "name": "ProcessingStatus", "autoWidth": true },
                                                { "data": "ArchiveFileName", "name": "ArchiveFileName", "autoWidth": true },
                                                { "data": "ArchiveFilePath", "name": "ArchiveFilePath", "autoWidth": true },
                                                { "data": "OverallStatus", "name": "OverallStatus", "autoWidth": true }
                                        ]
                                    });


                                    //Apply Custom search on jQuery DataTables here
                                    oTable = $('#myTable').DataTable();
                                    $('#btnSearch').click(function () {
                                        
                                        //Apply search for Original File Name // DataTable column index 6
                                        oTable.columns(3).search($('#txtTradingPartner').val().trim());
                                        //Apply search for Country // DataTable column index 3
                                        oTable.columns(5).search($('#ddDirection').val().trim());
                                        //hit search on server
                                        oTable.draw();

                                        
                                    });




                                });
                            </script>
                        }

